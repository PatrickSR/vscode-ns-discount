{
  "name": "ns-discount",
  "displayName": "ns-discount",
  "description": "",
  "publisher": "PatrickSR",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:featured",
		"onView:subscribe"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nsDiscount.featured.more",
        "title": "查看更多折扣"
      },
      {
        "command": "nsDiscount.subscribe.add",
        "title": "添加关注的游戏",
				"icon": "media/add.svg"
			},
      {
        "command": "nsDiscount.subscribe.refresh",
        "title": "刷新关注的游戏",
				"icon": "media/refresh.svg"
			},
			{
				"command": "nsDiscount.subscribe.remove",
				"title": "移除关注的游戏"
			}
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ns-discount",
          "title": "Switc游戏折扣",
          "icon": "media/ns.svg"
        }
      ]
    },
    "views": {
      "ns-discount": [
        {
          "id": "featured",
          "name": "折扣推荐"
        },
        {
          "id": "subscribe",
          "name": "我的关注"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
					"command": "nsDiscount.subscribe.add",
					"when": "view == subscribe",
					"group": "navigation"
				},
        {
					"command": "nsDiscount.subscribe.refresh",
					"when": "view == subscribe",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "nsDiscount.subscribe.remove",
					"when": "view == subscribe"
				}
			]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "axios": "^0.20.0"
  }
}
