{
  "name": "ns-discount",
  "displayName": "NS Discount",
  "description": "vscode 插件，查询Nintendo switch的游戏折扣",
  "keywords": [
    "nintendo",
    "switch",
    "ns",
    "游戏",
    "任天堂"
  ],
  "publisher": "PatrickSR",
  "icon": "media/nintendoswitch.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/PatrickSR/vscode-ns-discount.git"
  },
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:featured",
    "onView:subscribe"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nsDiscount.news.show",
        "title": "查看ns新闻"
      },
      {
        "command": "nsDiscount.news.more",
        "title": "查看更多ns新闻"
      },
      {
        "command": "nsDiscount.featured.more",
        "title": "查看更多折扣"
      },
      {
        "command": "nsDiscount.subscribe.add",
        "title": "添加关注的游戏",
        "icon": "media/add.svg"
      },
      {
        "command": "nsDiscount.subscribe.refresh",
        "title": "刷新关注的游戏",
        "icon": "media/refresh.svg"
      },
      {
        "command": "nsDiscount.subscribe.remove",
        "title": "移除关注的游戏"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ns-discount",
          "title": "Switc游戏折扣",
          "icon": "media/ns.svg"
        }
      ]
    },
    "views": {
      "ns-discount": [
        {
          "id": "ns-news",
          "name": "Switch快报"
        },
        {
          "id": "featured",
          "name": "折扣推荐"
        },
        {
          "id": "subscribe",
          "name": "我的关注"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "nsDiscount.subscribe.add",
          "when": "view == subscribe",
          "group": "navigation"
        },
        {
          "command": "nsDiscount.subscribe.refresh",
          "when": "view == subscribe",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nsDiscount.subscribe.remove",
          "when": "view == subscribe"
        }
      ],
      "commandPalette": [
        {
          "command": "nsDiscount.news.more",
          "when": "false"
        },
        {
          "command": "nsDiscount.news.show",
          "when": "false"
        },
        {
          "command": "nsDiscount.featured.more",
          "when": "false"
        },
        {
          "command": "nsDiscount.subscribe.add",
          "when": "false"
        },
        {
          "command": "nsDiscount.subscribe.refresh",
          "when": "false"
        },
        {
          "command": "nsDiscount.subscribe.remove",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "node-html-parser": "^1.2.20"
  }
}
